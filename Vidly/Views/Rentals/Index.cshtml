@model IEnumerable<Vidly.Models.Rental>
@{
    ViewBag.Title = "Rentals";
}

<h2>@ViewBag.Title</h2>
<br />
<table id="rentals" class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">Customer</th>
            <th scope="col">Movie</th>
            <th scope="col">Date Rented</th>
            <th scope="col">Date Returned</th>
            <th scope="col">Return</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#rentals").DataTable({
                ajax: {
                    url: "api/rentals",
                    dataSrc: "" // Used to a specific object within the JSON, only if applicable
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customers/details/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "membershipType.discountRate",
                        render: function (data) {
                            return data + "%";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<i class='bi bi-pencil-square js-edit' data-customer-id=" + data + "></i> / <i class='bi bi-trash3 js-delete' data-customer-id=" + data + "></i>";
                        }
                    }
                ]
            });

            $("#customers").on("click", ".js-edit", function () {
                window.location.replace("/customers/edit/" + $(this).attr("data-customer-id"));
            });

            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                //button.parents("tr").remove();
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });

                //if (confirm("Are you sure you want to delete this customer?")) {
                //    $.ajax({
                //        url: "/api/customers/" + button.attr("data-customer-id"),
                //        method: "DELETE",
                //        success: function () {
                //            button.parents("tr").remove();
                //        }
                //    });
                //};
            });
        });
    </script>
}
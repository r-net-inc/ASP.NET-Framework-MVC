@model Vidly.ViewModels.CustomerDetailsViewModel
@{
    ViewBag.Title = "Customer Details";
}

<h2>Customer Details</h2>
<br />
<div id="customer" class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/Content/customerprofilepictemplate-612x612.jpg" class="img-fluid rounded-start" alt="Customer's Profile Picture'">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Customer.Name @Html.ActionLink("Edit", "Edit", "Customers", new { id = Model.Customer.Id }, new { @class = "btn btn-sm btn-warning float-right" })</h4>
                <br />
                <p class="card-text">Membership Type: @Model.Customer.MembershipType.Name</p>
                <p class="card-text">Date of Birth: @Model.Customer.Birthdate</p>
                @*<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>*@
            </div>
        </div>
    </div>
</div>
<br />
<h3>Rental History</h3>
<br />
<table id="rentals" class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">Movie</th>
            <th scope="col">Date Rented</th>
            <th scope="col">Date Returned</th>
            <th scope="col">Return</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model.Rentals)
        {
            <tr>
                <td scope="row">@rental.Movie.Title</td>
                <td scope="row">@rental.DateRented</td>
                <td scope="row">@rental.DateReturned</td>
                <td scope="row">
                    @if (@rental.DateReturned == null)
                    {
                    @Html.ActionLink("Return", "ReturnRental", "Rentals", new { rentalId = rental.Id, movieId = rental.Movie.Id }, new { @class = "btn btn-sm btn-success" });
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

